{
	"manifest_version": 2,
	"name": "PVPS Launcher",
	"description":"Launch the PVPS web app to resize photos.",
	"version": "0.9",
	"icons": {
		"32": "img/pvps-32.png",
		"64": "img/pvps-64.png",
		"128": "img/pvps-128.png"
	},
	"homepage_url": "http://johanmynhardt.co.za/pvps",
	"author": "Johan Mynhardt",

	"permissions": [
		"tabs"
	],
	"background": {
		"persistent": false,
		"scripts": [
			"lib/main.js"
		]
	},
	"browser_action": {
		"default_icon": "img/pvps-128.png",
		"default_title": "Launch PVPS"
	}
}

// vim: tabstop=2
